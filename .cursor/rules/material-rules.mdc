  Widget build(BuildContext context) {
    return LayoutBuilder(
      builder: (context, constraints) {
        // ë°ìŠ¤í¬í†± (1200px+): Navigation Drawer
        if (constraints.maxWidth >= 1200) {
          return _buildDrawerLayout();
